<div class="mcontainer">
	<div class="lg:flex  lg:space-x-12">

		<div class="lg:w-3/4">

			<div class="card divide-y divide-gray-100 px-4">
				
				{{#each blog}}
				<div class="lg:flex lg:space-x-6 py-5">
					<a href="/blog/detail/{{this.slug}}">
						<div class="lg:w-60 w-full h-40 overflow-hidden rounded-lg relative shadow-sm">
							<img src="/public/assets/images/blog/{{this.blog_id}}/{{this.image}}" alt=""
								 class="w-full h-full absolute inset-0 object-cover">
							<div class="absolute bg-blue-100 font-semibold px-2.5 py-1 rounded-full text-blue-500 text-xs top-2.5 left-2.5">
								{{this.type}}
							</div>
						</div>
					</a>
					<div class="flex-1 lg:pt-0 pt-4">
						
						<a href="/blog/detail/{{this.slug}}" class="text-xl font-semibold line-clamp-2"> {{this.title}} </a>
						<p>Tác giả: <a href="#" class="font-semibold text-sm"> Stalla Johani</a></p>
						<div class="flex mt-3.5 space-x-2 text-sm font-medium">
							<a href="/admin/approve?approve=1&id={{this.slug}}" class="bg-blue-600 flex flex-1 h-8 items-center justify-center rounded-md text-white capitalize">
								Phê duyệt
							</a>
							<a href="/admin/approve?approve=-1&id={{this.slug}}" class="bg-gray-200 flex flex-1 h-8 items-center justify-center rounded-md capitalize">
								Từ chối
							</a>
						</div>
						
					</div>

				</div>
				{{/each}}
			</div>

		</div>
	</div>
</div>