{{#section 'css'}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="/public/assets/css/uploadImg.css">
{{/section}}

{{#section 'js'}}
    <script src="../assets/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/public/assets/js/uploadImg.js"></script>
    <script src="https://cdn.tiny.cloud/1/zl91lwryeczyn2jhzji60m8ccauunch925epicw56btc5pa2/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea'
        });
    </script>
{{/section}}

<div class="mcontainer">

		<!-- editor -->
		<div class="mt-4 mb-5">
			<form action="/blog/write" class="form-group flex-sm-column d-flex flex-wrap justify-content-center"
				  method="post" enctype="multipart/form-data">
				  <input type="hidden" name="userId" value="{{user.email}}" required>

				<div class="d-md-flex flex-col align-items-center w-100">
					<!-- post title -->
					<div class="title d-md-flex align-items-center mb-2" style="width: 100%;">
						<input id="title" name="title" type="text" placeholder="Post title"
							   class="p-title-input shadow-sm a-shadow" required></input>
					</div>

					<!-- content input -->
					<div class="d-lg-block m-2" style="width: 100%;">
						<textarea id="default" name="content" style="min-height: 380px;"></textarea>
					</div>
				</div>

				{{!-- address, place or blog --}}
				<div class="d-md-flex flex-col align-items-center w-100">
					<div class="mt-2 mb-2 p-0 shadow-sm w-100">
						<div class="w-100">
							<input name="address" id="address" type="text" placeholder="Address" class="text-center">
						</div>
					</div>
					<div class="m-0 p-0 w-100">
						<select name="type" id="type" required class="shadow-sm text-center">
							<option value="" disabled selected hidden>Type</option>
							<option value="Blog">Blog</option>
							<option value="Place">Place</option>

						</select>
					</div>

				</div>

				<!-- another info -->
				<div class="d-md-flex flex align-items-center w-100 justify-content-between">
					<div class="price m-0 p-0 shadow-sm">
						<div class="" style="width: calc(100% - 65px);">
							<input name="price" id="price" type="number" placeholder="Price" class="text-center" min="0"
								   required>
						</div>
						<span class="unit">
                        <select name="priceUnit" id="priceUnit" style="height: 50px;">
                            <option value="VND">VND</option>
                            <option value="USD">USD</option>
                        </select>
                    </span>
					</div>
					<div class="vehical m-0 p-0">
						<select name="vehicle" id="vehicle" vehicle class="shadow-sm text-center" required>
							<option value="" disabled selected hidden>Select</option>
							<option value="Đi bộ">Đi bộ</option>
							<option value="Xe đạp">Xe đạp</option>
							<option value="Xe máy">Xe máy</option>
							<option value="Ô tô">Ô tô</option>
							<option value="Xe khách">Xe khách</option>
							<option value="Xe lửa">Xe lửa</option>
							<option value="Tàu thuỷ, thuyền">Tàu thuỷ, thuyền</option>
							<option value="Máy bay">Máy bay</option>
						</select>
					</div>

				</div>
				<!-- image input -->
				<div id="uploadImg" class="input-group flex-column align-items-center">
					<input name="coverImage" type="file" id="file-input" accept="image/jpeg. image.png" onchange="preview()">
					<label for="file-input" class="custom-file-label btn btn-info rounded m-2">
						<i class="fas fa-upload"></i> Choose a cover image</label>
					<p id="numOfFile"></p>
					<div id="images"
						 class="row w-100 d-lg-flex mt-2 mb-2 align-items-center justify-content-around"></div>
				</div>
				<!-- submit btn -->
				<span class="w-100 d-flex justify-content-end">
                <button type="submit" name="Post" class="btn btn-primary col-12 col-md-2">Post</button>
            </span>
			</form>
		</div>
</div>